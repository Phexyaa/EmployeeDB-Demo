<UserControl x:Class="DesktopApp.Dialogs.ErrorMessage"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:DesktopApp.Dialogs"
			 mc:Ignorable="d">
	<Grid>
		<DockPanel x:Name="ErrorPanel"
				   Style="{StaticResource ErrorMessagePanel}"
				   d:LayoutOverrides="Width, Height">
			<Grid x:Name="ErrorGrid">
				<DockPanel FlowDirection="RightToLeft"
						   VerticalAlignment="Bottom"
						   Height="Auto">
					<Button x:Name="ExitErrorButton"
							Command="{Binding ExitErrorCommand}"
							Height="25"
							Width="25"
							Margin="0,0,15,0"
							Background="DarkRed">
						<Image Stretch="Fill"
                               Source="/Dialogs/x-octagon.png" />
					</Button>
					<TextBlock x:Name="ErrorTextBlock"
							   Text="{Binding Error}"
							   Grid.Row="1"
							   Height="Auto"
							   Margin="0,0,5,0"
							   Grid.ColumnSpan="2" 
							   VerticalAlignment="Center"/>
				</DockPanel>
			</Grid>
		</DockPanel>
	</Grid>
</UserControl>
